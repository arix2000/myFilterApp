<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dialog_image_preview"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="6dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:foreground="@drawable/circle_for_single_item_view"/>

    <TextView
        android:id="@+id/dialog_filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColors"
        android:layout_marginBottom="6dp"
        android:text="filterName"
        android:layout_below="@id/dialog_image_preview"/>

    <TextView
        android:id="@+id/choose_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_filter_name"
        android:layout_centerHorizontal="true"
        android:text="Co chcesz zrobić?"
        android:textColor="@color/textColors"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_delete_filter"
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_text_view"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="usuń" />

    <Button
        android:id="@+id/btn_edit_filter"
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_delete_filter"
        android:layout_alignParentRight="true"
        android:text="edytuj" />

</RelativeLayout>