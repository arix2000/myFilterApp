<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBg"
    android:padding="10dp"
    tools:context=".activities.AddSetFilterActivity">

    <ImageView
        android:id="@+id/add_filter_preview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_filter_preview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textViews"
                android:text="Jasność"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/brightness_seek_bar"
                style="@style/seekBars" />
            <TextView
                android:id="@+id/brightness_value"
                style="@style/numberTextViews"
                android:text="0" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>